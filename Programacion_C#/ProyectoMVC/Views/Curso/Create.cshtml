@model Curso
@{
    ViewData["Title"] = "Creación de Curso";
}

<h1>Página: @ViewData["Title"]</h1>

<div asp-validation-summary="All"></div>
<form method="POST">
    <div>
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre"/>
    </div>
    <div>
        <label asp-for="Dirección"></label>
        <input asp-for="Dirección"/>
    </div>
    <div>
        <label asp-for="Jornada"></label>
        @Html.DropDownList(//Html Helper.
            "Jornada", Html.GetEnumSelectList<TiposJornada>(),
                "Seleccione Jornada", new {@class = "form-control"}
        )
    </div>
    <input type="submit" value="Enviar">
</form>
<p><i>@ViewData["Fecha"]</i></p>