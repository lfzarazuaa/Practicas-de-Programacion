@using Entities
@using Business

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>Referencia</th>
            <th>Nombre de categoría</th>
            <th>Modificar</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var category in categories)
        {
        <tr>
            <td>@category.CategoryId</td>
            <td>@category.CategoryName</td>
            <th><a href="/category/update/@category.CategoryId">Editar</a></th>
        </tr>
        }
    </tbody>
</table>

@code {
    List<CategoryEntity> categories = new List<CategoryEntity>();//Inicializar listado de categorías.

    protected override async Task OnInitializedAsync()//Cuando se cargen los elementos
    {
        categories = Business_Category.CategoryList();//Actualiza los valores de las categorías.
    }

}
